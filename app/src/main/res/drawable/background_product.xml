<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- This is the border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- This is the background color of the card -->
            <stroke android:width="1dp" android:color="#DDDDDD"/> <!-- This is the border color -->
            <corners android:radius="8dp"/> <!-- This is the corner radius -->
        </shape>
    </item>
    <!-- This is the padding -->
    <item android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- This color should match the background color of the card -->
        </shape>
    </item>
</layer-list>
